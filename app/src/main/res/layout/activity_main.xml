<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/resultTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="180dp"
        android:hint="Type how much money you have and choose a burger"
        android:textAlignment="center"
        android:textColor="#4b1805"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/inputEditText"
        android:maxLength="8"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="32dp"
        android:ems="10"
        android:hint="How much money do you have?"
        android:inputType="number"
        android:textAlignment="center"
        android:textColor="#4b1805"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/chesseBurgerButton"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@null"
        android:layout_marginStart="60dp"
        android:scaleType="centerCrop"
        android:src="@drawable/cheese"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/inputEditText"
        tools:ignore="SpeakableTextPresentCheck"
        tools:src="@drawable/cheese"
        tools:srcCompat="@tools:sample/avatars" />

    <ImageButton
        android:id="@+id/doubleCheeseBurgerButton"
        android:layout_width="100dp"
        android:background="@null"
        android:layout_height="100dp"
        android:layout_marginEnd="60dp"
        android:scaleType="centerCrop"
        android:src="@drawable/doublecheese"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/inputEditText"
        tools:ignore="SpeakableTextPresentCheck"
        tools:src="@drawable/doublecheese"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/cheeseBurgerTextView"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="60dp"
        android:layout_marginTop="24dp"
        android:textAlignment="center"
        android:textColor="#4b1805"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/chesseBurgerButton" />

    <TextView
        android:id="@+id/doubleCheeseBurgerTextView"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="60dp"
        android:textAlignment="center"
        android:textColor="#4b1805"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/doubleCheeseBurgerButton" />

</androidx.constraintlayout.widget.ConstraintLayout>